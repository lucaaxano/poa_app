# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/poa_dev

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# App URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:4000

# Storage (MinIO/S3)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=poa-uploads

# Email
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
EMAIL_FROM=noreply@poa-local.dev

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
# Per-vehicle pricing (4.99 EUR per vehicle, min 49 EUR)
STRIPE_PRICE_ID=price_xxx
# Frontend needs the price ID (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_STRIPE_PRICE_ID=price_xxx

# Node
NODE_ENV=development
