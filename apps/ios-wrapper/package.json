{
  "name": "@poa/ios-wrapper",
  "version": "1.0.0",
  "private": true,
  "description": "iOS native wrapper for POA web app using Capacitor",
  "scripts": {
    "cap:sync": "npx cap sync ios && npm run copy:icon",
    "cap:open": "npx cap open ios",
    "cap:build": "npx cap sync ios && npm run copy:icon",
    "copy:icon": "cp resources/AppIcon-1024.png ios/App/App/Assets.xcassets/AppIcon.appiconset/AppIcon-512@2x.png"
  },
  "dependencies": {
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "capacitor-native-biometric": "^4.2.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "typescript": "^5.3.0"
  }
}
