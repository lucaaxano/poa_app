# ===========================================
# POA - Production Environment Variables
# ===========================================
#
# WICHTIG: Diese Datei nach .env kopieren und Werte ausfuellen!
# NIEMALS echte Passwoerter in diese .example Datei eintragen!
#
# Sichere Passwoerter generieren:
#   openssl rand -base64 48  (fuer JWT_SECRET)
#   openssl rand -base64 24  (fuer DB_PASSWORD)
#   openssl rand -base64 16  (fuer MINIO Keys)

# ===========================================
# Database (PostgreSQL)
# ===========================================
DB_USER=poa_admin
DB_PASSWORD=HIER_SICHERES_PASSWORT_EINTRAGEN
DB_NAME=poa_production

# ===========================================
# JWT Authentication
# ===========================================
# Mindestens 32 Zeichen, am besten mit openssl generieren
JWT_SECRET=HIER_64_ZEICHEN_ZUFALLSSTRING_EINTRAGEN

# ===========================================
# MinIO Object Storage
# ===========================================
MINIO_ACCESS_KEY=HIER_ACCESS_KEY_EINTRAGEN
MINIO_SECRET_KEY=HIER_SECRET_KEY_EINTRAGEN

# ===========================================
# E-Mail Service (Resend)
# ===========================================
# Option 1: Resend (empfohlen)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Option 2: SMTP (Alternative)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password

EMAIL_FROM=noreply@poa-platform.de

# ===========================================
# OpenAI (fuer KI-Features)
# ===========================================
# Du findest deinen API Key in deiner .env Datei (lokal)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxx

# ===========================================
# Stripe (fuer Billing)
# ===========================================
# Live Keys aus dem Stripe Dashboard
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# Per-vehicle pricing (4.99 EUR per vehicle, min 49 EUR)
# Create a recurring per-unit price in Stripe Dashboard
STRIPE_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxx

# Frontend needs the price ID (prefix with NEXT_PUBLIC_)
NEXT_PUBLIC_STRIPE_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxx
